{
  "name": "autoloannodejs",
  "version": "1.0.0",
  "description": "Auto Loan Application - Node.js Backend (refactored from Rails)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.js'",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ltphongssvn/autoloannodejs.git"
  },
  "keywords": ["nodejs", "express", "auto-loan", "rest-api"],
  "author": "ltphongssvn",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.0",
    "sequelize-cli": "^6.6.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "joi": "^17.13.0",
    "pdfkit": "^0.15.0",
    "multer": "^1.4.5-lts.1",
    "ws": "^8.18.0",
    "dotenv": "^16.4.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.0",
    "express-openapi-validator": "^5.3.0",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "opossum": "^8.1.0",
    "prom-client": "^15.1.0",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "sequelize-test-helpers": "^1.4.0"
  }
}
